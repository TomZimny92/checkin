<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gemini_Checkin.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">

            <Label x:Name="ClockLabel"
               Text="00:00:00"
               FontSize="48"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                <Button x:Name="CheckinButton"
                    Text="Check In"
                    Grid.Column="0"
                    BackgroundColor="Green"
                    IsEnabled="True"
                    Clicked="CheckinButton_Clicked" />

                <Button x:Name="CheckoutButton"
                    Text="Check Out"
                    Grid.Column="1"
                    BackgroundColor="Gray"
                    IsEnabled="False"
                    Clicked="CheckoutButton_Clicked" />
            </Grid>

            <Button x:Name="SummaryButton"
                Text="Show Summary"
                Clicked="SummaryButton_Clicked" />

            <Label x:Name="SummaryLabel"
               Text="Total Elapsed Time: 00:00:00"
               FontSize="24"
               HorizontalOptions="Center" />

            <Button x:Name="ResetButton"
                Text="Reset"
                BackgroundColor="Orange"
                Clicked="ResetButton_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
