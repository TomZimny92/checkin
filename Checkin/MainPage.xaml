<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Checkin.MainPage"
             xmlns:viewmodels="clr-namespace:Checkin.ViewModels"
             x:DataType="viewmodels:MainViewModel">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="45"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <ImageButton Style="{StaticResource SecondaryImageButton}"
                         Source="settings-icon-icons8.png"
                         Command="{Binding PreferencesCommand}" />
            <!--<Button Text="Preferences"
                    Command="{Binding PreferencesCommand}" />-->

            <Label Text="{Binding CurrentTime}"
                   Style="{StaticResource Big}" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="10">
                <Button Text="Check In"
                        Style="{StaticResource PrimaryButton}"
                        Grid.Column="0"
                        Command="{Binding CheckinCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding IsCheckedIn}"
                                     Value="False">
                            <!--<Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Green, Dark=Red}" />-->
                        </DataTrigger>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding IsCheckedIn}"
                                     Value="True">
                            <!--<Setter Property="BackgroundColor" Value="Gray" />-->
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Button Text="Check Out"
                        Style="{StaticResource PrimaryButton}"
                        Grid.Column="1"
                        Command="{Binding CheckoutCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding IsCheckedIn}"
                                     Value="True">
                            <!--<Setter Property="BackgroundColor" Value="Red" />-->
                        </DataTrigger>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding IsCheckedIn}"
                                     Value="False">
                            <!--<Setter Property="BackgroundColor" Value="Gray" />-->
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>

            <Button Text="Summary"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ShowSummaryCommand}" />

            <Label  Text="{Binding TotalElapsedTime, StringFormat='Total Elapsed Time: {0}'}"
                    Style="{StaticResource Medium}" />

            <Button Text="Reset"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding ResetCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
