<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Checkin.MainPage"
             xmlns:viewmodels="clr-namespace:Checkin.ViewModels"
             x:DataType="viewmodels:MainViewModel">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="45"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Button Text="Preferences"
                    BackgroundColor="Salmon"
                    Command="{Binding PreferencesCommand}" />

            <Label Style="{StaticResource Big}"  Text="{Binding CurrentTime}" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                <Button Text="Check In"
                    Grid.Column="0"
                    Command="{Binding CheckinCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                 Binding="{Binding IsCheckedIn}"
                                 Value="False">
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Green, Dark=Red}" />
                        </DataTrigger>
                        <DataTrigger TargetType="Button"
                                 Binding="{Binding IsCheckedIn}"
                                 Value="True">
                            <Setter Property="BackgroundColor" Value="Gray" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Button Text="Check Out"
                    Grid.Column="1"
                    Command="{Binding CheckoutCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                 Binding="{Binding IsCheckedIn}"
                                 Value="True">
                            <Setter Property="BackgroundColor" Value="Red" />
                        </DataTrigger>
                        <DataTrigger TargetType="Button"
                                 Binding="{Binding IsCheckedIn}"
                                 Value="False">
                            <Setter Property="BackgroundColor" Value="Gray" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>

            <Button Text="Show Summary"
                Command="{Binding ShowSummaryCommand}" />

            <Label Style="{StaticResource Medium}" Text="{Binding TotalElapsedTime, StringFormat='Total Elapsed Time: {0}'}" />

            <Button Text="Reset"
                BackgroundColor="Orange"
                Command="{Binding ResetCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
